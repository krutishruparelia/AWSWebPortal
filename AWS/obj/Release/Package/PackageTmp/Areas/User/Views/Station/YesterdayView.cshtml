@using System.Data
@{
    DataTable yesterdaygetCoulmns = new DataTable();
    yesterdaygetCoulmns = ViewBag.YesterdayColumnNames;
    int position = 4;
<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <ul class="nav nav-tabs nav-tabs-primary">
                    @for (int i = 0; i < yesterdaygetCoulmns.Rows.Count - 1; i++)
                    {
                        var name = yesterdaygetCoulmns.Rows[i][0].ToString().Replace(" ", "");
                        if (i == 0)
                        {
                            <li class="nav-item">
                                <a class="nav-link active" data-toggle="tab" href="#Yesterday_@name"><i class="icon-home"></i> <span class="hidden-xs">@yesterdaygetCoulmns.Rows[i][0].ToString()</span></a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" data-toggle="tab" href="#Yesterday_@name"><i class="icon-home"></i> <span class="hidden-xs">@yesterdaygetCoulmns.Rows[i][0].ToString()</span></a>
                            </li>
                        }
                    }

                </ul>

                <!-- Tab panes -->
                <div class="tab-content">
                    @for (int i = 0; i < yesterdaygetCoulmns.Rows.Count - 1; i++)
                    {
                        var tabname = yesterdaygetCoulmns.Rows[i][0].ToString().Replace(" ", "");
                        if (i == 0)
                        {

                            <div id="Yesterday_@tabname" class="container tab-pane active">
                                @Html.Action("YesterdayGraph", new { data = yesterdaygetCoulmns.Rows[i][0].ToString(), Position = position })
                            </div>
                        }
                        else
                        {
                            <div id="Yesterday_@tabname" class="container tab-pane">
                                @Html.Action("YesterdayGraph", new { data = yesterdaygetCoulmns.Rows[i][0].ToString(), Position = position })
                            </div>
                        }
                        position++;
                    }

                </div>
            </div>
        </div>
    </div>
</div>
}
