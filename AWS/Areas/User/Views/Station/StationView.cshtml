@using AWS.Models
@using System.Data
@{
    ViewBag.Title = "StationView";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<script type="text/javascript" src="~/Scripts/highslide-with-gallery.js"></script>
<link rel="stylesheet" type="text/css" href="~/Content/highslide.css" />
<div class="card">


    <div class="row">
        <div class="col-lg-8">
            <div>
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-primary">

                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#Today"><i class="icon-home"></i> <span class="hidden-xs">Today</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Yesterday" id="yes"><i class="icon-user"></i> <span class="hidden-xs">Yesterday</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Weekly" id="weeklygp"><i class="icon-user"></i> <span class="hidden-xs">Weekly</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#Monthly"><i class="icon-user"></i> <span class="hidden-xs">Monthly</span></a>
                        </li>
                        @*<li class="nav-item">
                            <a class="nav-link" data-toggle="tab" href="#CustomRange"><i class="icon-user"></i> <span class="hidden-xs">Custom Range</span></a>
                        </li>*@
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="Today" class="container tab-pane active">
                            <div class="card" style="height:296px">
                                <div class="card-header">
                                    Latest Condition
                                </div>
                                <div class="card-body">
                                    @Html.Action("TodayOverviewView")
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    Ghraph View
                                </div>
                                <div class="card-body">
                                    @Html.Action("TodayView")
                                </div>
                            </div>
                            <div class="card" style="width:156%">
                                <div class="card-header">
                                    Station Details
                                </div>
                                <div class="card-body">
                                    <div id="gridContainer"></div>
                                </div>
                            </div>
                        </div>
                        <div id="Yesterday" class="container tab-pane fade">
                            <div class="card">
                                <div class="card-header">
                                    Yesterday's Condition
                                </div>
                                <div class="card-body">
                                    @Html.Action("YesterdayOverviewView")
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    Ghraph View
                                </div>
                                <div class="card-body">
                                    @Html.Action("YesterdayView")
                                </div>
                            </div>
                            <div class="card" style="width:156%">
                                <div class="card-header">
                                    Station Details
                                </div>
                                <div class="card-body">
                                    <div id="grid"></div>
                                </div>
                            </div>
                        </div>
                        <div id="Weekly" class="container tab-pane fade">
                            <div class="card">
                                <div class="card-header">
                                    Weekly Condition
                                </div>
                                <div class="card-body">
                                    @Html.Action("WeeklyOverviewView")
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    Ghraph View
                                </div>
                                <div class="card-body">
                                    @Html.Action("WeeklyView")
                                </div>
                            </div>
                            <div class="card" style="width:156%">
                                <div class="card-header">
                                    Station Details
                                </div>
                                <div class="card-body">
                                    @Html.Action("WeeklyGrid")
                                </div>
                            </div>
                        </div>
                        <div id="Monthly" class="container tab-pane fade">
                            <div class="card">
                                <div class="card-header">
                                    Monthly Condition
                                </div>
                                <div class="card-body">
                                    @Html.Action("MonthlyOverviewView")
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header">
                                    Ghraph View
                                </div>
                                <div class="card-body">
                                    @Html.Action("MonthlyView")
                                </div>
                            </div>
                            <div class="card" style="width:156%">
                                <div class="card-header">
                                    Station Details
                                </div>
                                <div class="card-body">
                                    @Html.Action("MonthlyGrid")
                                </div>
                            </div>
                        </div>
                        <div id="CustomRange" class="container tab-pane fade">
                            <div class="card">
                                <div class="card-header">
                                    Select Date Range
                                </div>
                                <div class="card-body">
                                    <div id="dateragne-picker">
                                        <div class="input-daterange input-group">
                                            <input type="text" class="form-control" name="start" id="start" />
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">to</span>
                                            </div>
                                            <input type="text" class="form-control" name="end" id="end" />
                                            <button class="btn" id="loadData">Load Data</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="card-header">
                                        Overview
                                    </div>
                                    <div class="card-body" id="customoverview">
                                        @*@Html.Action("CustomRangeOverView")*@
                                    </div>

                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="col-lg-4" style="margin-top:5%;height:1% !important">
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-success">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#map"><i class="icon-map"></i> <span class="hidden-xs">Map View</span></a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="map" class="container tab-pane active">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs nav-tabs-success">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="tab" href="#Image"><i class="dx-icon-image"></i> <span class="hidden-xs">Image</span></a>
                        </li>
                    </ul>
                    <!-- Tab panes -->
                    <div class="tab-content">
                        <div id="Image" class="container tab-pane active" style="text-align:center;">
                            @{
                                var imageP = ViewBag.ImagePath;
                            <a href="@imageP" class="highslide" onclick="return hs.expand(this)">
                                <img src="@imageP" alt="StationImage" width="46%" /></a>
                                }
</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>
<script>
    $("#yes").click(function () {
        alert('yes');
        $("#grid").dxDataGrid('instance').refresh();
    });
    $("#loadData").click(function () {
        var fromdate = $('#start').val();
        var toDate = $('#end').val();
        $.ajax({
            url: "/User/Station/CustomRangeOverviewData",
            data: { "fromdate": fromdate, "toDate": toDate },
            success: function (result) {
                $('#customoverview').load('/User/Station/CustomRangeOverView');
            }
        });
    });
    $("#weeklygp").click(function () {

        var name1 = @Html.Raw(Json.Encode(ViewBag.graphColnames));

        var splitstring = [];
        splitstring = name1.split(',');
        setTimeout(function () {
            for (var a = 2; a < splitstring.length; a++) {
                var removespace = splitstring[a].replace(" ", "");
                if (removespace != "") {
                    var divName = "Yesterday_" + removespace + "_Week";
                    var chart = $("#" + divName).dxChart("instance");
                    chart.render();
                }
            }
        });
    });

    $('#dateragne-picker .input-daterange').datepicker({
        format: 'dd-mm-yy'
    });
    var griddata =@Html.Raw(Json.Encode(ViewBag.StationGrid));
    var Yesterdaygriddata =@Html.Raw(Json.Encode(ViewBag.YesterdayGrid));
    var WeeklycolName =@Html.Raw(Json.Encode(ViewBag.WeekColumn));
    var gridColumn =@Html.Raw(Json.Encode(ViewBag.ColumnNamesGrid));
    var mapd = @Html.Raw(Json.Encode(ViewBag.MapData));
    var a = 0;


   // where X is your every X minutes

</script>
<script type="text/javascript">
    hs.graphicsDir = '@Url.Content("~/Scripts/graphics/")';
    hs.align = 'center';
    hs.transitions = ['expand', 'crossfade'];
    hs.outlineType = 'rounded-white';
    hs.fadeInOut = true;
    //hs.dimmingOpacity = 0.75;

    // Add the controlbar
    hs.addSlideshow({
        //slideshowGroup: 'group1',
        interval: 5000,
        repeat: false,
        useControls: true,
        fixedControls: 'fit',
        overlayOptions: {
            opacity: .75,
            position: 'bottom center',
            hideOnMouseOut: true
        }
    });
</script>
<script src="~/Scripts/YesterdayGridData.js"></script>
<script src="~/Scripts/StationGrid.js"></script>
<script src="~/Scripts/StationViewMap.js"></script>