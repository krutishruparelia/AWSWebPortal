@{
    var name1 = ViewBag.MonthlyGraphName;
    var shownamemonth = name1.Replace(" ", "") + "_Month";
    var yedata = Html.Raw(Json.Encode(ViewBag.montlyData));
    <div class="demo-container">
        <div id="chart-demo">
            <div id="Month_@shownamemonth" style="width:880px">

            </div>
        </div>
    </div>
    <script>
        var @shownamemonth = @Html.Raw(Json.Encode(ViewBag.montlyData));

    var types = ["line", "stackedline", "fullstackedline"];
    $(function() {
        var chart = $("#Month_@shownamemonth").dxChart({
        palette: "Violet",
            dataSource: @shownamemonth,
            commonSeriesSettings: {
                argumentField: "Time",
                type: types[0]
            },
            margin: {
            bottom: 20
            },
            argumentAxis: {
            valueMarginsEnabled: false,
                discreteAxisDivisionMode: "crossLabels",
                grid: {
                visible: true
                }
            },
            series: [
                { valueField: "min", name: "Minimum" },
                { valueField: "max", name: "Maximum" },
                { valueField: "avg", name: "Average" },
            ],
            scrollBar: {
                visible: true
            },
            zoomAndPan: {
                argumentAxis: "both"
            },
            legend: {
            verticalAlignment: "bottom",
                horizontalAlignment: "center",
                itemTextPosition: "bottom"
            },
            title: {
            text: "@name1"
            },
            "export": {
            enabled: true
            },
            tooltip: {
            enabled: true
            }
        }).dxChart("instance");

        $("#types").dxSelectBox({
        dataSource: types,
            value: types[0],
            onValueChanged: function(e) {
                chart.option("commonSeriesSettings.type", e.value);
            }
        });
    });
    </script>}


